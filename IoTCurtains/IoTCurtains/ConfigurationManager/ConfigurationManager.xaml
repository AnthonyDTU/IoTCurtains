<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IoTCurtains.ConfigurationManager.ConfigurationManager"
             Title="ConfigurationManager">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            x:Name="OpenDeviceButton"
            Text="Open Device"
            Clicked="OpenDeviceButton_Clicked"/>


        <Button x:Name="SendConfigurationToDeviceButton"
                Text="Send Configuration To Device"
                Clicked="SendConfigurationToDeviceButton_Clicked"/>

        <Picker x:Name="COMPortPicker"/>
        <Picker x:Name="StopBitsPicker"/>
        <Picker x:Name="ParityPicker"/>
        



    </VerticalStackLayout>
</ContentPage>