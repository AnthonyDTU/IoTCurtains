<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:control="clr-namespace:IoTCurtains.ConfigurationManager"
             x:Class="IoTCurtains.ConfigurationManager.ConfigurationManager"
             Title="Configuration Manager">
    <VerticalStackLayout 
        WidthRequest="600">

        <control:SerialConfigurator 
            x:Name="serialConfigurator"/>

        <control:ConfigurationEditor 
            x:Name="configurationEditor"
            IsEnabled="False"/>

        <Button 
            x:Name="ResetDeviceButton"
            Text="Reset Device Configuration"
            Clicked="ResetDeviceButton_Clicked"
            Margin="20"
            WidthRequest="550"/>

    </VerticalStackLayout>
</ContentPage>