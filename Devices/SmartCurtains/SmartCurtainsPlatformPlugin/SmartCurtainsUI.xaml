<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartCurtainsPlatformPlugin.SmartCurtainsUI">
    <VerticalStackLayout>

            
        <Label
            x:Name="DeviceNameLabel"
            Text="Device Name"
            FontSize="24"
            FontAttributes="Bold"/>

        <Label
            Text="Current State"
            FontSize="14"/>

        <Entry
            x:Name="CurrentLevelEntry"
            IsReadOnly="True"
            Text="0%"/>


        <Label
            Text="Roll Up Time"
            FontSize="14"/>

        <HorizontalStackLayout>
            <TimePicker x:Name="RollUpTimeEntry"/>
            <CheckBox x:Name="FollowSunriseCheckbox"/>
        </HorizontalStackLayout>

        <Label
            Text="Roll Down Time"
            FontSize="14"/>

        <HorizontalStackLayout>
            <TimePicker x:Name="RollDownTimeEntry"/>
            <CheckBox x:Name="FollowSunsetCheckbox"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            
            <Button 
                x:Name="RollUpButton"
                Text="Roll Up"/>
            
            <Button 
                x:Name="RollDown"
                Text="Roll Down"/>
            
        </HorizontalStackLayout>
        
    </VerticalStackLayout>
</ContentView>
