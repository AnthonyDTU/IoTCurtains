<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DevicePlatform.MainPage"
             Title="Device Platform">

    <ScrollView>
        <VerticalStackLayout
            x:Name="MainContentView"
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center"
            HorizontalOptions="Center">


            <Entry x:Name="UsernameInput"/>
            <Entry x:Name="PasswordInput"/>
            

            <Button 
                x:Name="NewUserButton"
                Text="New User"
                Clicked="NewUserButton_Clicked"/>

            <Entry x:Name="GUIDOutput"/>
            <Entry x:Name="UsernameOutput"/>
            <Entry x:Name="PasswordOutput"/>

            <Button 
                x:Name="GetUserButton"
                Text="Get User"
                Clicked="GetUserButton_Clicked"/>



        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
